#!/usr/bin/env python3
"""
Hello Kitty Dashboard launcher.

This replaces the legacy Textual dashboard entrypoint and forwards directly to
the Hello Kitty BubbleTea/Textual app under dashboards/hello_kitty.
"""

from pathlib import Path
import runpy
import sys

REPO_ROOT = Path(__file__).resolve().parents[1]
HELLO_KITTY_MAIN = REPO_ROOT / "dashboards" / "hello_kitty" / "src" / "hello_kitty_dashboard" / "main.py"


def main() -> None:
    if not HELLO_KITTY_MAIN.exists():
        sys.stderr.write(f"Hello Kitty dashboard not found at {HELLO_KITTY_MAIN}\n")
        sys.exit(1)
    # Ensure package imports work when executed from anywhere
    sys.path.insert(0, str(HELLO_KITTY_MAIN.parent.parent))
    runpy.run_path(str(HELLO_KITTY_MAIN), run_name="__main__")


if __name__ == "__main__":
    main()
