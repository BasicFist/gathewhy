{
  "title": "Provider Health & Reliability",
  "tags": [
    "litellm",
    "providers",
    "health"
  ],
  "refresh": "30s",
  "panels": [
    {
      "id": 1,
      "title": "Success Rate by Provider (%)",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      },
      "targets": [
        {
          "expr": "100 * (sum by (api_provider) (rate(litellm_deployment_success_responses[5m])) / (sum by (api_provider) (rate(litellm_deployment_success_responses[5m])) + sum by (api_provider) (rate(litellm_deployment_failure_responses[5m]))))",
          "legendFormat": "{{api_provider}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "percent",
          "max": 100,
          "min": 0
        },
        {
          "format": "short"
        }
      ]
    },
    {
      "id": 2,
      "title": "Failure Rate by Provider",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      },
      "targets": [
        {
          "expr": "rate(litellm_deployment_failure_responses[5m])",
          "legendFormat": "{{api_provider}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "short",
          "label": "Failures/sec"
        },
        {
          "format": "short"
        }
      ]
    },
    {
      "id": 3,
      "title": "Provider Status Summary",
      "type": "stat",
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 8
      },
      "targets": [
        {
          "expr": "count by (api_provider) (rate(litellm_deployment_success_responses[5m]) > 0)",
          "legendFormat": "{{api_provider}} - Active",
          "refId": "A"
        }
      ]
    },
    {
      "id": 4,
      "title": "Provider Traffic Distribution",
      "type": "barchart",
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 16
      },
      "targets": [
        {
          "expr": "sum by (api_provider) (increase(litellm_proxy_total_requests_metric[1h]))",
          "legendFormat": "{{api_provider}}",
          "refId": "A"
        }
      ]
    }
  ]
}
