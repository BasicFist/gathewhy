{
  "title": "System Health & Infrastructure",
  "tags": [
    "litellm",
    "system",
    "redis",
    "infrastructure"
  ],
  "refresh": "10s",
  "panels": [
    {
      "id": 1,
      "title": "Redis Latency",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      },
      "targets": [
        {
          "expr": "litellm_redis_latency",
          "legendFormat": "{{operation}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "ms",
          "label": "Latency"
        },
        {
          "format": "short"
        }
      ],
      "alert": {
        "conditions": [
          {
            "evaluator": {
              "params": [
                100
              ],
              "type": "gt"
            },
            "query": {
              "params": [
                "A",
                "5m",
                "now"
              ]
            },
            "type": "query"
          }
        ],
        "name": "High Redis Latency"
      }
    },
    {
      "id": 2,
      "title": "Redis Failures",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      },
      "targets": [
        {
          "expr": "rate(litellm_redis_fails[5m])",
          "legendFormat": "Failures/sec",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "short",
          "label": "Failures/sec"
        },
        {
          "format": "short"
        }
      ]
    },
    {
      "id": 3,
      "title": "LiteLLM Self-Latency",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 8
      },
      "targets": [
        {
          "expr": "litellm_self_latency",
          "legendFormat": "{{operation}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "ms",
          "label": "Latency"
        },
        {
          "format": "short"
        }
      ]
    },
    {
      "id": 4,
      "title": "System Health Score",
      "type": "gauge",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 8
      },
      "targets": [
        {
          "expr": "100 - (100 * rate(litellm_redis_fails[5m]) / (rate(litellm_proxy_total_requests_metric[5m]) + 1))",
          "refId": "A"
        }
      ],
      "options": {
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              {
                "color": "red",
                "value": 0
              },
              {
                "color": "yellow",
                "value": 95
              },
              {
                "color": "green",
                "value": 99
              }
            ]
          },
          "min": 0,
          "max": 100,
          "unit": "percent"
        }
      }
    },
    {
      "id": 5,
      "title": "Cache Hit Rate (if enabled)",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 16
      },
      "targets": [
        {
          "expr": "100 * (rate(litellm_cache_hits[5m]) / (rate(litellm_cache_hits[5m]) + rate(litellm_cache_misses[5m])))",
          "legendFormat": "Hit Rate %",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "percent",
          "max": 100,
          "min": 0
        },
        {
          "format": "short"
        }
      ]
    }
  ]
}
